{
  "name": "@atomico/design-tokens",
  "description": "Tools to improve the use of layout tokens in webcomponents",
  "type": "module",
  "version": "1.0.0",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/atomicojs/store.git"
  },
  "bugs": {
    "url": "https://github.com/atomicojs/store/issues"
  },
  "homepage": "https://github.com/atomicojs/store#readme",
  "author": "UpperCod",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "test": "wtr test/**/*.test.{ts,js,jsx,tsx} --node-resolve",
